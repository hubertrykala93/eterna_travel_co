{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@authentication/data-access": ["libs/authentication/data-access/src/index.ts"],
      "@currency/data-access": ["libs/currency/data-access/src/index.ts"],
      "@language/data-access": ["libs/language/data-access/src/index.ts"],
      "@shared/data-access": ["libs/shared/data-access/src/index.ts"],
      "@shared/ui": ["libs/shared/ui/src/index.ts"],
      "@shared/ui/controls": ["libs/shared/ui/src/lib/controls/index.ts"],
      "@shared/util/helpers": ["libs/shared/util/src/lib/helpers/index.ts"],
      "@shared/util/pipes": ["libs/shared/util/src/lib/pipes/index.ts"],
      "@shared/util/services": ["libs/shared/util/src/lib/services/index.ts"],
      "@shared/util/types": ["libs/shared/util/src/lib/types/index.ts"],
      "@shared/util/validators": ["libs/shared/util/src/lib/validators/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
